@model IEnumerable<AnotherCity.Models.Project>
@inject AnotherCity.Services.FormattingService Format


<div class="col-md-8 ">
    <div id="blog-slider-grid" class="owl-carousel owl-theme">
        @foreach (var item in Model)
        {
            <div class="item">
                <div class="blog-slider-grid">
                    <figure>
                        <a asp-controller="Projects" asp-action="ViewProject" asp-route-id="@item.Id">
                            @*<img src="~/uploads/@item.MainImg" alt="" />*@
                            <img src="http://via.placeholder.com/1020x720" alt="" />
                        </a>
                        <figcaption>
                            <h3><a asp-controller="Projects" asp-action="ViewProject" asp-route-id="@item.Id"> @item.Title</a></h3>
                            <span>
                                @*Hosted by <a asp-controller="Members" asp-action="IndexAll">@item.Member.FirstName @item.Member.LastName</a> |*@
                                @Format.AsReadableDate(item.StartDate)
                            </span>
                            <p>@item.ShortDesc</p>
                        </figcaption>
                    </figure>
                </div>
            </div>
        }
    </div>
</div>