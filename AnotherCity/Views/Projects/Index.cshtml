                <th>
                    @Html.DisplayNameFor(model => model.VolunteerOpp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvestOpp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FinishDate)
