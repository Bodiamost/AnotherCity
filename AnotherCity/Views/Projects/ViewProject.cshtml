<section class="bg-gray no-padding below-header">
    <div class="container">
        <div class="row margin-two">
            <div class="col-md-9 col-sm-9 padding-four  dividers-header double-line  text-center">
                <div class="subheader bg-white">
                    <h1>@Model.Title</h1>
                    <h2>Information</h2>
